<div class = space>アーティスト一覧⬇︎</div>

<%= form_with model: @artist,class: "add_form_frame",id: "form" do |form| %>
  <%= form.text_field :title ,placeholder: "新たに追加するアーティスト名を入力してください" , class: "add_form", id: "title"%>
  <div class = add_form_submit_frame><%= form.submit :作成する ,id: "submit"%></div>
<% end %>

<div id= list >
<% @artists.each do |artist| %>
  <div class= artist >
  <div><%= artist.title%></div>
  <div class=review>
  <div class=star_rate></div>
  <%= link_to "アーティストの詳細", artist_path(artist.id),class:"link_to_albums"%>
    <%= link_to "アーティスト名の変更" , edit_artist_path(artist.id),class:"link_to_artist_edit"%>
    </div>
  </div>
<% end %>

</div>



